{
  "extends": [
    "@rocketseat/eslint-config/node"
  ],
  "rules": {
    "no-undef": "off",
    "camelcase": "off",
    "no-useless-constructor": "off",
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "interface",
        "format": [
          "PascalCase"
        ],
        "custom": {
          "regex": "^I[A-Z]",
          "match": true
        }
      }
    ]
  }
}